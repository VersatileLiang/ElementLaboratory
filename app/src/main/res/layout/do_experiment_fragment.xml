<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/do_experiment_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExperimentActivity.ui.DoExperimentFragment"
    android:background="@drawable/side_nav_bar">

    <com.xmut.elelab.MyTool.MyView.ZoomView
        android:id="@+id/zoomView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/experimental_background"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <com.xmut.elelab.MyTool.MyView.MyRelativeButton
                android:id="@+id/start_element_move"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/test_tube">
            </com.xmut.elelab.MyTool.MyView.MyRelativeButton>
            <com.xmut.elelab.MyTool.MyView.MyRelativeButton
                android:id="@+id/movable_experimental_equipment_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/test_tube">
            </com.xmut.elelab.MyTool.MyView.MyRelativeButton>
            <com.xmut.elelab.MyTool.MyView.MyRelativeButton
                android:id="@+id/beaker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/beaker">
            </com.xmut.elelab.MyTool.MyView.MyRelativeButton>
        </LinearLayout>
    </com.xmut.elelab.MyTool.MyView.ZoomView>

    <LinearLayout
        android:id="@+id/linear_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textColor="@color/text_black"
                android:shadowColor="#CA7510"
                android:shadowRadius="1"
                android:shadowDx="1"
                android:shadowDy="1"
                android:text="@string/experiment_score">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textColor="@color/text_black"
                android:shadowColor="#CA7510"
                android:shadowRadius="1"
                android:shadowDx="1"
                android:shadowDy="1"
                android:text="@string/app_name">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="20dp"
                android:textColor="@color/text_black"
                android:shadowColor="#CA7510"
                android:shadowRadius="1"
                android:shadowDx="1"
                android:shadowDy="1"
                android:text="@string/experiment_time">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/experiment_equipment"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/experiment_equipment">
            </Button>
            <Button
                android:id="@+id/experiment_equipment1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/yaoji">
            </Button>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
